@model Labb4LibraryOnline.Models.BookLoan

@{
    ViewData["Title"] = "Create";
}

<h1 class="text-center">Borrow</h1>

<h4 class="text-center">Choose CustomerName and BookTitle</h4>
<hr />
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="FkCustomerId" class="control-label">Customer</label>
                    <select asp-for="FkCustomerId" class="form-control" asp-items="ViewBag.FkCustomerId"></select>
                </div>
                <div class="form-group">
                    <label asp-for="FkBookId" class="control-label">Book</label>
                    <select asp-for="FkBookId" class="form-control" asp-items="ViewBag.FkBookId"></select>
                </div>
                <div class="form-group">
                    <label asp-for="BookLoanDate" class="control-label">Start Date</label>
                    <input asp-for="BookLoanDate" class="form-control" />
                    <span asp-validation-for="BookLoanDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="BookReturnDate" class="control-label">End Date</label>
                    <input asp-for="BookReturnDate" class="form-control" />
                    <span asp-validation-for="BookReturnDate" class="text-danger"></span>
                </div>
                <div class="form-group text-center">
                    <input type="submit" value="Borrow Now" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>

<div class="text-center">
    <a asp-action="Index" class="btn btn-secondary mt-3">List of Borrowed Books</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
