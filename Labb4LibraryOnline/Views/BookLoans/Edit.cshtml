@model Labb4LibraryOnline.Models.BookLoan

@{
    ViewData["Title"] = "Edit";
}

<h1>Return/Edit</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="BookLoanId" />
            <div class="form-group">
                <label asp-for="FkCustomerId" class="control-label"></label>
                <select asp-for="FkCustomerId" class="form-control" asp-items="ViewBag.FkCustomerId"></select>
                <span asp-validation-for="FkCustomerId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FkBookId" class="control-label"></label>
                <select asp-for="FkBookId" class="form-control" asp-items="ViewBag.FkBookId"></select>
                <span asp-validation-for="FkBookId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BookLoanDate" class="control-label"></label>
                <input asp-for="BookLoanDate" class="form-control" />
                <span asp-validation-for="BookLoanDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BookReturnDate" class="control-label"></label>
                <input asp-for="BookReturnDate" class="form-control" />
                <span asp-validation-for="BookReturnDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <select asp-for="Status" class="form-control">
                    <option value="@LoanStatus.Returned">Returned</option>
                    <option value="@LoanStatus.NotReturned">Not Returned</option>
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
